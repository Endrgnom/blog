{% extends "front/main.twig" %}

{% block content %}
    <div class="container">
        <div class="row">

                <div class="col">
                    <div class="card">
                        <img class="card-img-top" src="{{ article.image }}" alt="">
                        <div class="card-body">
                            <a href="/view/{{ article.id }}"><h4 class="card-title">{{ article.title }}</h4></a>
                            <p class="card-text">{{ article.text }}</p>
                        </div>
                    </div>
                </div>

        </div>
    </div>