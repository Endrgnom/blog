{% extends "front/main.twig" %}

{% block content %}


<div class="container">
    <div class="row">
        {% for article in articles %}
        <div class="col-6">
            <div class="card">
                <img class="card-img-top" src="{{ article.image }}" alt="">
                <div class="card-body">
                    <a href="/view/{{ article.id }}"><h4 class="card-title">{{ article.title }}</h4></a>
                    <p class="card-text">{{ article.intro }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}